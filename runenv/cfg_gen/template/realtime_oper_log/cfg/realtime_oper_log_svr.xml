<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<RealtimeOperLogLoadSvrConf version="1">
	<dr>../cfg/protocol/log.dr</dr>
	<listen_ip>#realtime_log_svr_udp_ip#</listen_ip>
	<listen_port>#realtime_log_svr_udp_port#</listen_port>
	<conn_db_num>1</conn_db_num>
	<conn_db_info type="ConnDBInfo">
		<type>mysql</type>
		<host>#logdb_proxy_host#</host>
		<port>#logdb_proxy_port#</port>
		<user>#logdb_proxy_user#</user>
		<pwd>#logdb_proxy_pwd#</pwd>
		<database>logload_#regionid#_#worldid#</database>
		<charset>utf8mb4</charset>
	</conn_db_info>

